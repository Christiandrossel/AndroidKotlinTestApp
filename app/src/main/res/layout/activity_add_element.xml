<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutTotal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddElementActivity">

    <Button
        android:id="@+id/addButtonBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button hinzufügen" />

    <Button
        android:id="@+id/addTextViewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView Hinzufügen" />

    <TextView
        android:id="@+id/textViewAusgabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ausgabe" />
</LinearLayout>